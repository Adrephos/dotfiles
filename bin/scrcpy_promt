#!/usr/bin/env bash

TARGET_WORKSPACE="7"
TARGET_WORKSPACE_NAME="seven"

while true; do
    adb wait-for-device

    if adb devices | grep -w "device" > /dev/null; then
        choice=$(echo -e "Yes\nNo" | rofi -dmenu -p "Launch scrcpy on workspace ${TARGET_WORKSPACE}?")

        if [[ "$choice" == "Yes" ]]; then
            hyprctl dispatch workspace "${TARGET_WORKSPACE}" && sleep 1 && /
            scrcpy --stay-awake --no-key-repeat --render-driver=opengles --video-codec-options=color-range=1 &
        fi

        while adb get-state 2>/dev/null | grep -q "device"; do
            sleep 2
        done
    fi

    sleep 1
done
